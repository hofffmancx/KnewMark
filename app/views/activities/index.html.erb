<div class="page-content">
  <div class="container">
    <div class="row">
      <main class="col-md-9">
        <%= render "knowledges/show_header" %>
        <section class="knowledge-activity">
          <% @activities.each do |activity| %>
            <table class="table">
              <% if activity.trackable && activity.parameters[:knowledge_id] == @knowledge.friendly_id %>
                <tr>
                  <td>
                    <%= display_avatar(activity.owner, "25x25", "img-circle") %> <%= link_to activity.owner.username, activity.owner if activity.owner %> åœ¨ <%= time_ago(activity) %> <%= render_activity activity %>
                  </td>
                </tr>
              <% end %>
            </table>
          <% end %>
      </section>
    </main>
    <aside class="col-md-3">
      <%= render 'knowledges/sidebar' %>
    </aside>
  </div>
</div>
</div>

<%= content_for :page_javascript do %>
<script>
  $("#knowledge-event").addClass("active");
</script>
<% end %>
