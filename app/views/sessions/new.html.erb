<h1>登陆</h1>
<div class="row">
  <div class="col-lg-6">
    <%= form_tag sessions_path, method: :post, class: "form-horizontal" do%>
    <div class="form-group">
      <div class="col-lg-12">邮箱或者手机号</div>
      <div class="col-lg-12">
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>
    </div>
      <div class="form-group">
        <div class="col-lg-12">密码</div>
        <div class="col-lg-12">
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <%= check_box_tag :remember, params[:remember], true %>
          <%= label_tag :记住我 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <%= link_to "忘记密码", new_password_reset_path %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-12">
          <input type="submit" name="sign_submit" value="登陆" class="btn btn-primary">
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-12">
            <p> 没有账号？</p>
            <%= link_to "注册", new_user_path, class: "btn btn-primary"%>
        </div>
      </div>
    <% end -%>
  </div>
</div>
